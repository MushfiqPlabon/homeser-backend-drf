# .env.example
# This file serves as a template for environment variables required by the HomeSer backend.
# DO NOT commit your actual .env file to version control.
# Copy this file to .env and fill in your specific configurations (e.g., API keys, database URLs).

# ======================================
# DJANGO CORE SETTINGS
# ======================================

# Django secret key for cryptographic signing
# Generate a new secret key for production: https://djecrety.ir/
SECRET_KEY=your-secret-key-here

# Debug mode - set to False in production
# Security warning: Never run with DEBUG=True in production
DEBUG=True

# Hosts that this Django application will serve
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# ======================================
# DATABASE CONFIGURATION
# ======================================

# Database URL for PostgreSQL (optional - uses SQLite by default)
# Format: postgresql://user:password@host:port/database_name
# DATABASE_URL=postgresql://user:password@localhost:5432/homeser

# Individual database credentials (alternative to DATABASE_URL)
# dbname=your_database_name
# user=your_database_user
# password=your_database_password
# host=your_database_host
# port=your_database_port

# ======================================
# SECURITY SETTINGS
# ======================================

# CORS (Cross-Origin Resource Sharing) settings
# Comma-separated list of allowed origins for API requests
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ======================================
# CLOUDINARY SETTINGS (for image storage)
# ======================================

# Cloudinary account credentials for image storage
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ======================================
# PAYMENT GATEWAY SETTINGS (SSLCOMMERZ)
# ======================================

# SSLCOMMERZ merchant credentials
# For testing, use the default testbox credentials
# For production, replace with your live credentials
SSLCOMMERZ_STORE_ID=testbox
SSLCOMMERZ_STORE_PASS=qwerty
SSLCOMMERZ_IS_SANDBOX=True

# ======================================
# APPLICATION URLS
# ======================================

# Frontend application URL
FRONTEND_URL=http://localhost:3000

# Backend API URL
# In production (e.g., Vercel), this should be the URL of your deployed backend.
# Example for Vercel: https://your-project-name.vercel.app
BACKEND_URL=http://localhost:8000

# ======================================
# CACHE SETTINGS
# ======================================

# Redis URL for caching, WebSocket channel layers, and session storage (required for production)
# Example: REDIS_URL=redis://127.0.0.1:6379/1
REDIS_URL=

# Cache timeout in seconds (default: 15 minutes)
CACHE_TTL=900

# ======================================
# SECURITY SETTINGS
# ======================================

# JWT signing key for token creation
SIGNING_KEY=your-jwt-signing-key-here

# SSL and cookie security settings for production (set to True in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
AUTH_COOKIE_SECURE=False

# ======================================
# MONITORING AND LOGGING
# ======================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# OpenTelemetry for monitoring (optional)
# ENABLE_OPENTELEMETRY=False

# ======================================
# ADVANCED CONFIGURATION
# ======================================

# Control advanced structure population on startup
POPULATE_ADVANCED_STRUCTURES_ON_STARTUP=False

