{
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput && python manage.py migrate",
  "builds": [
    {
      "src": "homeser/wsgi.py",
      "use": "@vercel/python",
      "config": { "python": "3.11.x" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "homeser/wsgi.py"
    }
  ]
}