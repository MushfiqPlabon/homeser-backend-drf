{
  "version": 2,
  "builds": [
    {
      "src": "homeser/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    },
    {
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "homeser/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "homeser.settings",
    "PYTHONPATH": "$PYTHONPATH:.",
    "VERCEL": "1"
  }
}